{
    "rulesDirectory": ["tslint"],
    "rules": {
        /**
         * TS 专用
         */

        // 强制函数重载是连续的（必须写在一起）
        "adjacent-overload-signatures": true,
        // 禁止逗号运算符。
        "ban-comma-operator": true,
        // 类成员声明规则
        "member-access": [true, "no-public", "check-constructor"],
        // 类声明排序
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "public-instance-field",
                    "public-constructor",
                    "private-static-field",
                    "private-instance-field",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],

        // 不允许内部模块
        "no-internal-module": true,
        // 不允许修改方法输入参数
        "no-parameter-reassignment": false,
        // 禁止使用/// <reference path=> 导入 ，使用import代替
        "no-reference": true,
        // 如果for循环中没有使用索引，建议是使用for-of
        "prefer-for-of": true,
        // 不允许没有Promise的情况下使用await
        "await-promise": true,
        // if/for/do/while强制使用大括号
        "curly": true,
        // 不允许使用arguments.callee
        "no-arg": true,
        // 不允许使用特殊运算符 &, &=, |, |=, ^, ^=, <<, <<=, >>, >>=, >>>, >>>=, ~
        "no-bitwise": true,
        // do while/for/if/while 语句中将会对例如if(a=b)进行检查
        "no-conditional-assignment": true,
        // 不允许super() 两次使用在构造函数中
        "no-duplicate-super": true,
        // 不允许使用eval
        "no-eval": true,
        // 只允许在模板字符串中使用${
        "no-invalid-template-strings": true,
        // 不允许在class之外使用this
        "no-invalid-this": true,
        // 不允许使用null,使用undefined代替null，指代空指针对象
        "no-null-keyword": false,
        // 不允许array中有空元素
        "no-sparse-arrays": true,
        // 不允许throw一个字符串
        "no-string-throw": false,
        // 不允许case段落中在没有使用breack的情况下，在新启一段case逻辑
        "no-switch-case-fall-through": true,
        // 不允许使用未使用的表达式
        "no-unused-expression": [true, "allow-fast-null-checks"],
        // 在使用前必须声明
        "no-use-before-declare": true,
        // 不允许使用var
        "no-var-keyword": true,
        // 不允许return await
        "no-return-await": true,
        // 箭头函数定义的参数需要括号
        "arrow-parens": true,
        // 必须使用恒等号，进行等于比较
        "triple-equals": true,
        // 需要定义的类型存在
        "typedef": [true, "call-signature", "parameter", "member-variable-declaration"],
        // 类型声明的冒号之前是否需要空格
        "typedef-whitespace": true,

        /**
         * 维护性功能
         */

        // 每行开始以4个空格符/或2个tabs开始
        "indent": [true, "spaces", 4],
        // 每个文件中可定义类的个数
        "max-classes-per-file": [true, 1],
        // 定义每行代码数
        "max-line-length": [true, 180],
        // 禁止在一个文件内，多次引用同一module
        "no-duplicate-imports": true,
        // 建议使用T[]方式声明一个数组对象
        "array-type": [true, "array"],
        // 类名以大驼峰格式命名
        "class-name": true,
        // 定义注释格式
        "comment-format": [true, "check-space"],
        // 定义编码格式默认utf-8
        "encoding": true,
        // import关键字后加空格 import { Component, Pipe } from 'core';
        "import-spacing": true,
        // 注释基于jsdoc风格
        "jsdoc-format": true,
        // 调用构造函数时需要用括号
        "new-parens": true,
        // 不允许空格结尾
        "no-trailing-whitespace": [true, "ignore-comments", "ignore-jsdoc"],
        // 不允许没有必要的初始化
        "no-unnecessary-initializer": true,
        // 定义变量命名规则
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-snake-case", "allow-leading-underscore"],
        // 使用单引号
        "quotemark": [true, "single", "jsx-double"],
        // 必须使用分号结尾
        "semicolon": [true, "always"]
    }
}
